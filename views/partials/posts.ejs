<div class="posts">
    <p>No momento temos <%= posts.length %> posts em nosso blog</p>
    <% posts.forEach(post => { %>
     <h1><%= post.titulo %></h1>
     <p><%- post.conteudo %></p>
     <h4><%= post.autor %> - <%= post.data_postagem%></h4>
     <% if(req.session.loggedin) { %>
     <a href="/lista/<%= post.id %>" class="btn btn-danger">Deletar</a>
     <a href="/editar/<%= post.id %>" class="btn btn-info">Editar</a>
     <% } %>
     <p class="linha">____________________________________</p>
    <% }) %>
    <% if(req.session.loggedin) { %>
    <form action="/deletar" method="post">
        <button type="submit">Deletar todos os posts</button>
    </form>
    <% } %>
</div>

